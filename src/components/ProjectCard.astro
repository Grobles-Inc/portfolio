---
import { ArrowRight, ExternalLink, Github } from "@lucide/astro";
import { Image } from "astro:assets";

interface Props {
  id: string;
  title: string;
  description: string;
  image?: ImageMetadata;
  technologies: string[];
  liveDemo?: string;
  github?: string;
  category: string;
  featuresLength: number;
  slug: string;
}

const {
  id,
  title,
  description,
  image,
  technologies,
  liveDemo,
  github,
  category,
  featuresLength,
  slug,
} = Astro.props;

const currentLocale = Astro.currentLocale || "es";
---

<div class="card bg-base-100 rounded-xl shadow-lg hover:shadow-xl">
  {
    image && (
      <figure class="px-4 pt-4">
        <Image
          src={image}
          alt={title}
          width={400}
          height={250}
          class="rounded-xl object-cover w-full h-48"
          loading="lazy"
          transition:name={`project-image-${slug}`}
        />
      </figure>
    )
  }

  <div class="card-body">
    <div class="flex justify-between items-start mb-2">
      <h2
        class="card-title text-lg font-bold"
        transition:name={`project-title-${slug}`}
      >
        {title}
      </h2>
      <div class="badge badge-secondary badge-sm">{category}</div>
    </div>

    <p class="text-base-content/70 text-sm mb-4">{description}</p>

    <div class="flex flex-wrap gap-1 mb-4">
      {
        technologies
          .slice(0, 3)
          .map((tech) => (
            <span class="badge badge-outline badge-xs">{tech}</span>
          ))
      }
      {
        technologies.length > 3 && (
          <span class="badge badge-outline badge-xs">
            +{technologies.length - 3}
          </span>
        )
      }
    </div>

    <div class="card-actions justify-between items-center">
      <div class="flex gap-2">
        {
          liveDemo && (
            <a
              href={liveDemo}
              target="_blank"
              rel="noopener noreferrer"
              class="btn btn-sm btn-outline btn-circle tooltip"
              data-tip="Ver demo"
              aria-label={`Ver demo de ${title}`}
            >
              <ExternalLink class="w-3 h-3" />
            </a>
          )
        }
        {
          github && (
            <a
              href={github}
              target="_blank"
              rel="noopener noreferrer"
              class="btn btn-sm btn-outline btn-circle tooltip"
              data-tip="Ver código"
              aria-label={`Ver código de ${title}`}
            >
              <Github class="w-3 h-3" />
            </a>
          )
        }
      </div>

      <a
        href={currentLocale === "es"
          ? `/projects/${slug}`
          : `/en/projects/${slug}`}
        class="btn btn-sm btn-primary"
      >
        {currentLocale === "es" ? "Ver Detalles" : "View Details"}
        <ArrowRight class="w-3 h-3" />
      </a>
    </div>
  </div>
</div>
