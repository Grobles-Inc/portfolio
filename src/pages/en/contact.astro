---
import { Mail, MapPin, Phone, MessageCircle } from "@lucide/astro";
import Page from "@/layouts/Page.astro";

const structuredData = {
  "@context": "https://schema.org",
  "@type": "ContactPage",
  mainEntity: {
    "@type": "Organization",
    name: "Grobles Solutions",
    contactPoint: {
      "@type": "ContactPoint",
      telephone: "+51-972-557-287",
      contactType: "customer service",
      availableLanguage: ["Spanish", "English"],
      areaServed: "Worldwide",
    },
  },
};
---

<Page
  title="Contact - Grobles Solutions | Let's talk about your project"
  description="Do you have an idea? Contact Grobles Solutions. 24/7 support, free consultation and personalized budget for your software project."
  structuredData={structuredData}
>
  <section class="max-w-7xl mx-auto">
    <div
      class="flex flex-col items-center text-center space-y-6 py-12 lg:mt-20 animate-fade-in"
    >
      <h1 class="text-4xl md:text-5xl lg:text-7xl font-bold">
        Connect with <span class="italic">Us</span>
      </h1>
      <p class="max-w-2xl text-lg">
        We have a strong desire to collaborate and welcome esteemed brands and
        enthusiastic entrepreneurs to join us.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 px-4 mb-20 mt-20">
      <div
        class="card bg-base-100 shadow-xl rounded-3xl animate-zoom-in"
        style="animation-delay:100ms"
      >
        <div class="card-body items-center text-center">
          <Mail class="w-12 h-12 mb-4" />
          <h2 class="card-title text-xl font-bold">Our Email</h2>
          <p class="text-base-content/80">grobles.dev@gmail.com</p>
        </div>
      </div>
      <div
        class="card bg-base-100 shadow-xl rounded-3xl animate-zoom-in"
        style="animation-delay:200ms"
      >
        <div class="card-body items-center text-center">
          <MapPin class="w-12 h-12 mb-4" />
          <h2 class="card-title text-xl font-bold">Located in</h2>
          <p class="text-base-content/80">Lima, Per√∫</p>
        </div>
      </div>
      <div
        class="card bg-base-100 shadow-xl rounded-3xl animate-zoom-in"
        style="animation-delay:300ms"
      >
        <div class="card-body items-center text-center">
          <Phone class="w-12 h-12 mb-4" />
          <h2 class="card-title text-xl font-bold">Call Us</h2>
          <p class="text-base-content/80">+51 937 760 953</p>
        </div>
      </div>
    </div>

    <div class="px-4 mt-20">
      <div
        class="card rounded-3xl shadow-xl max-w-4xl mx-auto animate-zoom-in bg-base-100/80 backdrop-blur"
      >
        <div class="card-body px-8 py-10 md:px-16">
          <h2
            class="card-title text-2xl md:text-3xl font-bold text-center justify-center mb-8 gap-2"
          >
            Send us a <span class="text-primary">Message</span>
          </h2>
          <form
            id="contact-form"
            class="grid grid-cols-1 gap-8"
            autocomplete="off"
          >
            <div class="form-control w-full">
              <label class="label">
                <span
                  class="label-text text-base font-semibold text-base-content"
                  >Full Name</span
                >
              </label>
              <input
                type="text"
                name="name"
                placeholder="Tu nombre completo"
                class="input input-lg input-primary input-bordered rounded-xl w-full bg-base-200/60 focus:bg-base-100"
                required
              />
            </div>
            <div class="form-control w-full">
              <label class="label">
                <span
                  class="label-text text-base font-semibold text-base-content"
                  >Email</span
                >
              </label>
              <input
                type="email"
                name="email"
                placeholder="tu@email.com"
                class="input input-lg input-primary input-bordered rounded-xl w-full bg-base-200/60 focus:bg-base-100"
                required
              />
            </div>
            <div class="form-control w-full">
              <label class="label">
                <span
                  class="label-text text-base font-semibold text-base-content"
                  >Phone Number</span
                >
              </label>
              <input
                type="tel"
                name="phone"
                placeholder="+51 999 999 999"
                class="input input-lg input-primary input-bordered rounded-xl w-full"
                required
              />
            </div>

            <div class="form-control flex-1">
              <label class="label">
                <span
                  class="label-text text-base font-semibold text-base-content"
                  >Message</span
                >
              </label>
              <textarea
                name="message"
                placeholder="Tell us about your project or consultation..."
                class="textarea textarea-lg textarea-primary textarea-bordered rounded-xl h-40 min-h-[8rem] w-full bg-base-200/60 focus:bg-base-100 resize-none"
                required></textarea>
            </div>

            <div class="form-control mt-8 flex justify-center">
              <button type="submit" class="btn btn-primary btn-lg">
                Send Message
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>

  <script type="module" is:inline>
    const form = document.getElementById("contact-form");
    if (form) {
      form.addEventListener("submit", function (e) {
        e.preventDefault();
        const fd = new FormData(form);
        const name = fd.get("name")?.toString().trim();
        const email = fd.get("email")?.toString().trim();
        const phone = fd.get("phone")?.toString().trim();
        const message = fd.get("message")?.toString().trim();

        if (!name || !email || !phone || !message) {
          alert("Please fill in all fields");
          return;
        }

        const base = "https://wa.me/51972557287";
        const text = encodeURIComponent(
          `Hello, I'm ${name}.\nEmail: ${email}\nPhone: ${phone}\nMessage: ${message}`,
        );
        const whatsappLink = `${base}?text=${text}`;
        window.open(whatsappLink, "_blank");

        form.reset();
      });
    }
  </script>
</Page>
